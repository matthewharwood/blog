      <%= check_box_tag "work[category_ids][]", category.id, @work.category_ids.include?(category.id), id: dom_id(category) %>
      <%= label_tag dom_id(category), category.name %><br>
    <% end  %>
  </div>
  <div class="field">
    <%= f.label :subtitle %><br />
    <%= f.text_area :subtitle %>
  </div>
  <div class="field">
    <%= f.label :svg %><br />
    <%= f.text_area :svg %>
  </div>

  <div class="field">
    <%= f.label :post_a %><br />
    <%= f.text_area :post_a %>
  </div>
    <div class="field">
    <%= f.label :post_b %><br />
    <%= f.text_area :post_b %>
  </div>
  <div class="field">
    <%= f.label :post_c %><br />
    <%= f.text_area :post_c %>
  </div>
  <div class="field">
    <%= f.label :post_d %><br />
    <%= f.text_area :post_d %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
